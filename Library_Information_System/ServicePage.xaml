<Page x:Class="Library_Information_System.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Information_System"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="iaia" 
      FontFamily="Segoe UI" 
      Background="#F0F2F5">
    <Page.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <DropShadowEffect x:Key="CardShadow" ShadowDepth="2" Color="#AAAAAA" Opacity="0.3" BlurRadius="10"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="#4A90E2"
                            CornerRadius="4" 
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A6496"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="#F5F5F5"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EAEAEA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DDDDDD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="34"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="34"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,15,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Library Information System" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       Foreground="#333333"/>

            <Button Grid.Column="1"
                    Name="BtnAddRecord" 
                    Content="Создать запись" 
                    Click="BtnAddRecord_Click"
                    Style="{StaticResource PrimaryButton}" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Padding="15,8"/>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Margin="10,0,10,10" Padding="15" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10,0" VerticalAlignment="Top">
                    <TextBlock Text="Поиск" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="Auto"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Top">
                    <TextBlock Text="Сортировка" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <RadioButton Name="SortComboBox" Content="По возрастанию количества" Checked="SortComboBox_Checked" />
                    <RadioButton Name="SortComboBox1" Content="По убыванию количества" Checked="SortComboBox1_Checked" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0" VerticalAlignment="Top">
                    <TextBlock Text="Фильтрация по издательству" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox Name="FiltrComboBox" SelectionChanged="FiltrComboBox_SelectionChanged" Width="Auto">
                        <ComboBoxItem Content="Все издательства"/>
                        <ComboBoxItem Content="Издательский дом «Республика Башкортостан»"/>
                        <ComboBoxItem Content="Башкирское книжное издательство"/>
                        <ComboBoxItem Content="Издательство УГНТУ"/>
                        <ComboBoxItem Content="Уфа"/>
                        <ComboBoxItem Content="Эксмо"/>
                        <ComboBoxItem Content="Китап"/>
                        <ComboBoxItem Content="Детская и юношеская книга"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <ListView Name="ProductListView" Grid.Row="2" 
                  Background="Transparent" 
                  BorderThickness="0" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorder}" Effect="{StaticResource CardShadow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Width="70" Height="70" Grid.Column="0" Stretch="UniformToFill" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,15,0">
                                <Image.Source>
                                    <Binding Path="GetProductPhoto">
                                        <Binding.TargetNullValue>
                                            <ImageSource>res/1.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                <TextBlock Text="{Binding Istoch_lit_Name}" FontSize="20" FontWeight="Bold" Foreground="#222222" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Izdatelstvo, StringFormat='Издательство: {0}'}" FontSize="16" Foreground="#555555" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Kolvo_ekz, StringFormat='Количество экземпляров: {0}'}" FontSize="16" Foreground="#555555"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0">
                                <TextBlock Text="{Binding Фонд_Библиотеки.Name_Fond, StringFormat='Фонд: {0}'}" FontSize="16" Foreground="#555555" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Сотрудники.Fam_Sotrudn, StringFormat='Сотрудник: {0}'}" FontSize="16" Foreground="#555555" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Тип_литературы.Tip_Lit_Name, StringFormat='Тип: {0}'}" FontSize="16" Foreground="#555555" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Data_izdania, StringFormat='Год: {0}'}" FontSize="16" Foreground="#555555"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15,0,0,0">
                                <Button Name="Delete" Click="Delete_Click" Content="Удалить" Style="{StaticResource ActionButton}"/>
                                <Button Name="Redact" Click="Redact_Click" Content="Редактировать" Style="{StaticResource ActionButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Border Grid.Row="3" Background="White" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,8">
                <TextBlock Name="RecordCountTextBlock" Text="Показано: 10 из 26" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="#777777"/>
                <Button Name="PrevPageButton" Content="&lt; Назад" Margin="5" Click="PrevPageButton_Click" Style="{StaticResource PrimaryButton}"/>
                <TextBlock Name="PageInfoTextBlock" Text="Страница 1/3" FontSize="16" VerticalAlignment="Center" Margin="10,0" Foreground="#333333"/>
                <Button Name="NextPageButton" Content="Вперед &gt;" Margin="5" Click="NextPageButton_Click" Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>