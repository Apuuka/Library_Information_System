<Page x:Class="Library_Information_System.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Information_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="iaia" FontFamily="Times New Roman" Background="#00bfff">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Поиск" TextAlignment="Center" Width="300" FontSize="20"/>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="600" FontSize="15" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="Сортировка" TextAlignment="Center" Width="300" FontSize="20"/>
                <RadioButton Name="SortComboBox" Content="По возрастанию количества экземпляров" Checked="SortComboBox_Checked" FontSize="15" Width="250"/>
                <RadioButton Name="SortComboBox1" Content="По убыванию количества экземпляров" Checked="SortComboBox1_Checked" FontSize="15" Width="250"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="Фильтрация по издательству" TextAlignment="Center" Width="300" FontSize="20"/>
                <ComboBox Name="FiltrComboBox" SelectionChanged="FiltrComboBox_SelectionChanged" FontSize="15" Width="250">
                    <ComboBoxItem Content="Все издательства"/>
                    <ComboBoxItem Content="Издательский дом «Республика Башкортостан»"/>
                    <ComboBoxItem Content="Башкирское книжное издательство"/>
                    <ComboBoxItem Content="Издательство УГНТУ"/>
                    <ComboBoxItem Content="Уфа"/>
                    <ComboBoxItem Content="Эксмо"/>
                    <ComboBoxItem Content="Китап"/>
                    <ComboBoxItem Content="Детская и юношеская книга"/>
                </ComboBox>
            </StackPanel>
        </WrapPanel>

        <TextBlock Text="Library_Information_System" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

        <ListView Name="ProductListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="550"/>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <Image Width="70" Height="70" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0">
                            <Image.Source>
                                <Binding Path="GetProductPhoto">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res/1.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Istoch_lit_Name}" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Izdatelstvo, StringFormat='Издательство: {0}'}" FontSize="18"/>
                            <TextBlock Text="{Binding Kolvo_ekz, StringFormat='Количество экземпляров: {0}'}" FontSize="18"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Фонд_Библиотеки.Name_Fond, StringFormat='Фонд библиотеки: {0}'}" FontSize="18" />
                            <TextBlock Text="{Binding Сотрудники.Fam_Sotrudn, StringFormat='Фамилия сотрудника: {0}'}" FontSize="18" />
                            <TextBlock Text="{Binding Тип_литературы.Tip_Lit_Name, StringFormat='Тип литературы: {0}'}" FontSize="18" />
                            <TextBlock Text="{Binding Data_izdania, StringFormat='Год издания: {0}'}" FontSize="18"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Button Name="Delete" Click="Delete_Click" Content="Удалить" Width="120" Margin="5"/>
                            <Button Name="Redact" Click="Redact_Click" Content="Редактировать" Width="120" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Name="PrevPageButton" Content="&lt; Назад" Width="100" Margin="5" Click="PrevPageButton_Click"/>
            <TextBlock Name="PageInfoTextBlock" Text="Страница 1/1" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
            <Button Name="NextPageButton" Content="Вперед &gt;" Width="100" Margin="5" Click="NextPageButton_Click"/>
            <TextBlock Name="RecordCountTextBlock" Text="Показано: 0 из 0" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>